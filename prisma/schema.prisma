generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())   
  name String
  email String @unique
  password String
  last_session DateTime @updatedAt
  update_at DateTime  @updatedAt
  date_born String?

  playlists Playlist[]
}


model Playlist {
  id Int @id @default(autoincrement())
  name String
  //Relacion entre  usuario y playlist
  user Usuario @relation(fields: [userId], references: [id])
  userId Int
  
  songs PlaylistCancion[]
}

model PlaylistCancion {
  //relacion entre Playlis y playlistsong
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId  Int // relation scalar field (used in the `@relation` attribute above)
  song   Cancion @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId Int // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())
  @@id([playlistId, songId])
}

model Cancion{
  id Int   @id @default(autoincrement())
  name String
  artist String
  album String  
  year Int
  gener String
  duration Int
  privado Boolean @default(true)

  playlists PlaylistCancion []
}
